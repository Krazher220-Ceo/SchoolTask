# Database
# Для разработки используйте SQLite (но без enums) или PostgreSQL
# SQLite: DATABASE_URL="file:./dev.db"
# PostgreSQL: DATABASE_URL="postgresql://user:password@localhost:5432/sch1"
DATABASE_URL="postgresql://user:password@localhost:5432/dbname?sslmode=require"

# PostgreSQL (альтернативный URL)
POSTGRES_URL="postgresql://user:password@localhost:5432/dbname?sslmode=require"

# Prisma Accelerate (опционально)
PRISMA_DATABASE_URL="prisma+postgres://accelerate.prisma-data.net/?api_key=your_api_key"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# Google Forms (опционально, для интеграции)
GOOGLE_FORMS_JOIN_LINK="https://forms.google.com/your-form-link"
GOOGLE_FORMS_IDEA_LINK="https://forms.google.com/your-idea-form-link"

# Telegram Bot (для интеграции с Telegram)
TELEGRAM_BOT_TOKEN="your-telegram-bot-token-from-botfather"
TELEGRAM_WEBHOOK_URL="https://your-domain.com/api/telegram/webhook"
